- var scripts = getBlock('scripts')
- var styles = getBlock('styles')

- scripts.add(site.scripts)
- styles.add(sites.styles)

doctype 5
html
  head
    // Rendered with Jade
    meta(charset="utf-8")
    title
      != site.title
    meta(name="description" content="site.description")
    meta(name="keywords" content="site.keywords")

    != getBlock('meta').toHTML()

    != styles.toHTML() %>

  body
    header
      h2 document.title || site.title
    article
      != content

    != scripts.toHTML()
